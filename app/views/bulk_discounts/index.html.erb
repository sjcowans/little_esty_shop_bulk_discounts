 <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, style: 'pull-right' %></li>
      <li><%= link_to 'My Items', merchant_items_path(@merchant), style: 'pull-right' %></li>
      <li><%= link_to 'My Invoices', merchant_invoices_path(@merchant), style: 'pull-right' %></li>
      <li><%= link_to 'My Bulk Discounts', merchant_bulk_discounts_path(@merchant), style: 'pull-right' %></li>
    </ul>
  </nav>
</div>

<h3><%=@merchant.name%> Bulk Discounts:</h3>
<% @bulk_discounts.each do |discount| %>
  <div id="bulk-discount-<%= discount.id %>">
  <p> <%= link_to "Bulk Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount) %> <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), :data => {:confirm => 'Are you sure?'}, method: :delete %> </p>
  <p> Discount: <%= discount.percent_discount %>%, Required quantity: <%= discount.quantity_threshold %> </p>
  </div>
<% end %>

<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %>